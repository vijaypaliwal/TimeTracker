@model IEnumerable<TimeTracker.Models.Tracker>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-danger" })
</p>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>
            Patient
        </th>
        <th>
            TrakingDateTime
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>
        </thead>
    <tbody>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrakingDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
         <div class="btn-group">
                        <a class="btn btn-danger dropdown-toggle" data-toggle="dropdown" href="#">Action
                       
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Edit", "Edit", new { id = item.TrackerID })</li>

                            <li>@Html.ActionLink("Details", "Details", new { id = item.TrackerID }) </li>

                            <li class="divider"></li>

                            <li>@Html.ActionLink("Delete", "Delete", new { id = item.TrackerID })</li>
                        </ul>
                    </div>
        </td>
    </tr>
}
</tbody>
</table>
