@model IEnumerable<TimeTracker.Models.Patient>

@{
    ViewBag.Title = "Index";
}

<h2>Index<small>Patient</small></h2>


<p>
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-danger"})
</p>
<table class="table table-bordered">
    <thead>
    <tr>
        
        <th>
            FullName
        </th>
        <th>
            Person type
        </th>
        <th>
            IsLocked
        </th>
        <th></th>
    </tr>
        </thead>
    <tbody>
@foreach (var item in Model) {
    var personType=TimeTracker.Models.PersonType.AllTypes().Where(p=>p.Value==item.PersonType).FirstOrDefault().Text;
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            <div class="label label-@item.PersonType">@personType</div>            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsLocked)
        </td>
        <td>
            <div class="btn-group">
                        <a class="btn btn-danger dropdown-toggle" data-toggle="dropdown" href="#">Action
                       
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>

                            <li>@Html.ActionLink("Details", "Details", new { id = item.Id }) </li>

                            <li class="divider"></li>

                            <li>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</li>
                        </ul>
                    </div>
        </td>
    </tr>
}
</tbody>
</table>
